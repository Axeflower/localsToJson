<Window x:Class="ObjectDumper.ExportDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ObjectDumper"
             mc:Ignorable="d"
             d:DesignHeight="350" Width="480"
            SizeToContent="WidthAndHeight"
            Title="Dump variable from locals as JSON">

    <Grid Width="450" Height="300">
        <ComboBox HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="186" Name="LocalDropDown" SelectionChanged="LocalDropDown_SelectionChanged" />
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10.333,9.667" VerticalAlignment="Bottom" Width="75" Click="Button_Click" />
        <TextBox HorizontalAlignment="Left" Height="auto" Margin="10,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="auto" Name="OutPut" MinWidth="400" MinLines="20" MaxHeight="200" />
        <TextBlock HorizontalAlignment="Left" Margin="209,14,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top"  Name="TypeInfo" />
    </Grid>
</Window>